<form id="updateJdbcConfForm" class="form-horizontal" role="form">
	<div class="form-body">
       <div class="form-group">
          <label  class="col-md-4 control-label">数据库用户名<span class="required">*</span></label>
          <div class="col-md-8">
			 <input type="text" name="user" value="$user" class="form-control" />
          </div>
		</div>
       <div class="form-group">
          <label  class="col-md-4 control-label">数据库密码<span class="required">*</span></label>
          <div class="col-md-8">
			 <input type="password" name="password" value="$password" class="form-control" />
          </div>
		</div>
		<div class="form-group">
          <label  class="col-md-4 control-label">数据库名称<span class="required">*</span></label>
          <div class="col-md-8">
			 <input type="text"  name="dbName" class="form-control" value="$dbName"/>
          </div>
		</div>
		<div class="form-group">
          <label  class="col-md-4 control-label">数据库IP:PORT<span class="required">*</span></label>
          <div class="col-md-8">
			 <input type="text" name="ipPort" value="$ipPort" class="form-control" />
          </div>
		</div>
	    <div class="form-group">
          <div class="col-md-12" style="text-align:center;">
			 <a href="javascript:;" class="btn btn-success" onclick="Config.updateJdbcConf()">
            	<i class="fa fa-save"></i>&nbsp;保 存 
            </a> 
			 <a class="btn btn-info" href='$ctxpath/initDB/backupMysql'>
            	<i class="fa fa-file-code-o"></i>&nbsp;备 份 
            </a> 
          </div>
       </div>
	</div>
</form>
